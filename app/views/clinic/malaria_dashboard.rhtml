    <meta charset="utf-8">
    <title>Malaria Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Charisma, a fully featured, responsive, HTML5, Bootstrap admin template.">
    <meta name="author" content="Muhammad Usman">

    <!-- The styles -->
    <%= stylesheet_link_tag("bootstrap-cerulean.min") %>
    <%= stylesheet_link_tag("charisma-app") %>
    <%= stylesheet_link_tag("chosen.min") %>
    <%= stylesheet_link_tag("colorbox") %>
    <%= stylesheet_link_tag("responsive-tables") %>
    <%= stylesheet_link_tag("jquery.noty") %>
    <%= stylesheet_link_tag("noty_theme_default") %>
    <%= stylesheet_link_tag("elfinder.min") %>
    <%= stylesheet_link_tag("elfinder.theme") %>
    <%= stylesheet_link_tag("animate.min") %>

    <!-- jQuery -->
    <%= javascript_include_tag("jquery.min") %>
    <style>
      .navbar-brand {
        font-size: 26px;
        letter-spacing: 2px;
        text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.5);
        font-family: Courier, monospace;
        font-weight: 800;
      }

      .navbar-inner {
        height: 52px;
        padding-bottom: 0;
        padding-top: 0;
      }

      .badge{
        font-size: 20pt;
      }

      .test-label{
        font-size: 20pt;
        font-family: Courier, monospace;
        font-weight: bold;
        color: black;
      }

      .badge{
        /*font-family: Courier, monospace;
        font-weight: 800;
        background-color: #388E8E;*/
      }

      .facility-name{
        font-size: 16pt;
        font-family: Courier, monospace;
      }

      .glyphicon{
        font-size: 12pt;
      }

      .btn {
        text-shadow: 0 1px 0 rgba(0, 0, 0, 0.1);
        width: 100%;
      }

    </style>
  </head>

  <body>
    <!-- topbar starts -->
    <div class="navbar navbar-default" role="navigation">

      <div class="navbar-inner">
        <a href="#" class="navbar-brand">
          <span style="width:500px;">Kamuzu Central Hospital</span>
        </a>

      </div>
    </div>
    <!-- topbar ends -->
    <div class="ch-container">


      <div class="row">
            <div class="box col-md-12">
              <div class="box-inner">
                <div class="box-header well">
                  <h2><i></i> <span>Cases</span></h2>
                </div>
                <div class="box-content">
                  <table class="table table-striped table-bordered responsive">
                    <thead>
                      <tr>
                        <th style="width: 300px;">&nbsp;</th>
                        <th>Total</th>
                      </tr>
                    </thead>
                    <tbody>

                      <tr>
                        <td class="test-label">Malaria Cases</td>
                        <td class="center">
                          <a class="btn btn-info" href="#">203</a>
                        </td>
                      </tr>

                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <!--/span-->

          </div>




      <div class="row">
        <div id="content">
          <div class="row">
            <div class="box col-md-12">
              <div class="box-inner">
                <div class="box-header well">
                  <h2><i></i> <span>Tests Ordered</span></h2>
                </div>
                <div class="box-content">
                  <table class="table table-striped table-bordered responsive">
                    <thead>
                      <tr>
                        <th style="width: 300px;">&nbsp;</th>
                        <th>Total Orders</th>
                        <th>Positives</th>
                        <th>Negatives</th>
                        <th>Unknown</th>
                      </tr>
                    </thead>
                    <tbody>

                      <tr>
                        <td class="test-label">mRDT</td>
                        <td class="center">
                          <a class="btn btn-info" href="#">234</a>
                        </td>
                        <td class="center">
                          <a class="btn btn-danger" href="#">150</a>
                        </td>
                        <td class="center">
                          <a class="btn btn-danger" href="#">30</a>
                        </td>
                        <td class="center">
                          <a class="btn btn-danger" href="#">30</a>
                        </td>
                      </tr>
                      <tr>
                        <td class="test-label">Microscopy</td>
                        <td class="center">
                          <a class="btn btn-info" href="#">234</a>
                        </td>
                        <td class="center">
                          <a class="btn btn-danger" href="#">150</a>
                        </td>
                        <td class="center">
                          <a class="btn btn-danger" href="#">30</a>
                        </td>
                        <td class="center">
                          <a class="btn btn-danger" href="#">30</a>
                        </td>
                      </tr>

                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>





          <div class="row">
            <div class="box col-md-12">
              <div class="box-inner">
                <div class="box-header well">
                  <h2><i></i> <span>Anti Malaria Drugs</span></h2>
                </div>
                <div class="box-content">
                  <table class="table table-striped table-bordered responsive">
                    <thead>
                      <tr>
                        <th style="width: 300px;">&nbsp;</th>
                        <th>Total Drugs Prescribed</th>
                      </tr>
                    </thead>
                    <tbody>

                      <tr>
                        <td class="test-label">AL 1</td>
                        <td class="center">
                          <a class="btn btn-info" href="#">234</a>
                        </td>
                      </tr>
                      <tr>
                        <td class="test-label">AL 2</td>
                        <td class="center">
                          <a class="btn btn-info" href="#">234</a>
                        </td>
                      </tr>
                      <tr>
                        <td class="test-label">AL 3</td>
                        <td class="center">
                          <a class="btn btn-info" href="#">234</a>
                        </td>
                      </tr>
                      <tr>
                        <td class="test-label">AL 4</td>
                        <td class="center">
                          <a class="btn btn-info" href="#">234</a>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <!--/span-->

          </div>





        </div>

        <hr>

        <footer class="row">
          <p class="col-md-3 col-sm-3 col-xs-12 powered-by">Powered by: <a
              href="http://www.baobabhealth.org/">Baobab Health Trust</a></p>
        </footer>

      </div><!--/.fluid-container-->
    </div>
    <!-- external javascript -->

    <%= javascript_include_tag("bootstrap.min") %>
    <!-- data table plugin -->
    <%= javascript_include_tag("jquery.dataTables.min") %>
    <!-- select or dropdown enhancer -->
    <%= javascript_include_tag("chosen.jquery.min") %>
    <!-- library for making tables responsive -->
    <%= javascript_include_tag("responsive-tables") %>

  </body>
</html>
