<html>
  <head>
    <title>Patient Treatment Dashboard</title>
    <script type="text/javascript" language="javascript"
            src="/touchscreentoolkit/lib/javascripts/touchScreenToolkit.js" defer  >
    </script>
    <%= javascript_include_tag "jquery" %>

    <meta http-equiv='content-type' content='text/html;charset=UTF-8' />

    <script type="text/javascript">
      tstUsername = "";
      tstCurrentDate = "<%= @date %>";
      tt_cancel_destination = '/patients/show/<%= @patient.id %>';
      tt_cancel_show = '/patients/show/<%= @patient.id %>'
    </script>

    <style type="text/css">

      #btnCancel{
        display: none;
      }

    </style>

    <script type="text/javascript">
      jQuery('html').click(function() {
        jQuery("#popup-div").hide();
        jQuery("#cover").hide();
      });

      jQuery('#popup-div').click(function(event){
        event.stopPropagation();
      });

      function continueProcess(){
        jQuery("#popup-div").hide();
        jQuery("#cover").hide();

      }

      function showPopup(){
        document.getElementById("popup-div").style.display = 'inline';
        document.getElementById("cover").style.display = 'inline';
      }

      function hidePopup(){
        document.getElementById("popup-div").style.display = 'none';
        document.getElementById("cover").style.display = 'none';
      }

    </script>
    <style>
      .my_button {
        -moz-user-select: none;
        background-image: none;
        border: 1px solid transparent;
        border-radius: 4px;
        cursor: pointer;
        display: inline-block;
        font-size: 16px;
        font-weight: bolder;
        line-height: 1.82857;
        margin-bottom: 0;
        padding: 6px 56px;
        text-align: center;
        vertical-align: middle;
        white-space: nowrap;
        background-color: #8B0000;
        border-color: #2e6da4;
        color: #fff;
        float: right;
        width: 42.2%;
      }


      .popup_button {
        -moz-user-select: none;
        background-image: none;
        border: 1px solid transparent;
        border-radius: 4px;
        cursor: pointer;
        display: inline-block;
        font-size: 16px;
        font-weight: bolder;
        line-height: 1.82857;
        bottom: 26px;
        padding: 6px 56px;
        text-align: center;
        vertical-align: middle;
        white-space: nowrap;
        background-color: #337ab7;
        border-color: #2e6da4;
        color: #fff;
        float: right;
        margin-top: 12px;
      }


      #popup-div {
        display: none;
        background-color: #F4F4F4;
        border: 2px solid #E0E0E0;
        border-radius: 15px;
        height: 172px;
        padding: 5px;
        position: absolute;
        margin-top: 210px;
        width: 560px;
        margin-left: 430px;
        z-index: 991;
      }

      #popup-header{
        border-bottom: 2px solid #7D9EC0;
        margin-left: -5px;
        width: 101.5%;
        background-color: #FFFFFF;
        margin-top: -5px;
        padding-top: 5px;
        border-radius: 15px 15px 0 0;
        font-size: 14pt;
        font-weight: bolder;
      }

      #cover{
        display: none;
        position: absolute;
        background-color: black;
        width: 100%;
        height: 102%;
        left: 0%;
        top: 0%;
        z-index: 990;
        opacity: 0.65;
      }

      #yes, #no {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
      }
      
    </style>
  </head>

  <body>
    <div id='content'>
      <form id = 'dashboard' action='/clinic'>
        <div id='project_name'>
					OPD
        </div>
        <span id='patient_name'><%= @patient_bean.name rescue "" %></span>
        <span id='patient_id'><%= @patient_bean.national_id_with_dashes rescue "" %></span>
        <span id='patient_residence'><%= @patient_bean.current_residence rescue "" %></span>
        <span id='patient_age'><%= @patient_bean.age rescue "" %></span>
        <span id='patient_gender'><%= @patient_bean.sex rescue "" %></span>

        <select id="tabs">
          <option value='/patients/precription_data?patient_id=<%= @patient.id %>&dispensed_order_id=<%=@dispensed_order_id%>'>Prescriptions</option>
        </select>

        <select id="links">
          <% if advanced_prescription_interface %>
            <option value='/prescriptions/generic_advanced_prescription?patient_id=<%= @patient.id -%>'>Prescribe</option>
          <% else %>
            <option value='/prescriptions/auto?patient_id=<%= @patient.id -%>'>Prescribe</option>
          <% end %>

        </select>
        <input type='submit' value='Finish' />
      </form>
    </div>

    <div id="popup-div">
      <div id="popup-header">
        <center>Confirm</center>
      </div><br />
      <div>

        <span style="font-size: 16pt;">
          <center>
            Are you sure you want to void the selected order?
          </center>
        </span>
        <div style="padding-top: 65px;">
          <span id="yes" onclick="continueProcess(orderID);" class="popup_button" style="position: relative;">Yes</span>
          <span id="no" onclick="hidePopup();" class="popup_button" style=" position: relative; right: 20px;">Cancel</span>
        </div>
      </div>
    </div>
    <div id="cover"></div>
  </body>
</html>
